\begin_layout Standard
\begin_inset Formula 
\begin{align}
\chi & =\sum\varphi_{i}(x^{1})\varphi_{j}(x^{2})\varphi_{k}(x^{3})\\
 & \downarrow\mathrm{grad}\nonumber \\
A_{1} & =\sum\varphi_{i}^{\prime}(x^{1})\varphi_{j}(x^{2})\varphi_{k}(x^{3})\\
